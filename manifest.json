{
  "manifest_version": 2,
  "name": "Anime Hunter",
  "short_name": "Anime Hunter",
  "description": "Уведомляет вас о свежих сериях аниме вышедших на популярных фандаб сайтах",
  "version": "0.1.4.12",
  "background": {
    "scripts": [
      "js/jquery-3.3.1.min.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "css/style.css"
      ],
      "js": [
		"js/jquery-3.3.1.min.js",
        "js/inject.js"
      ],
    "run_at":"document_start"
    }
  ],
  "browser_action": {
    "default_icon": "logo2.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo2.png",
    "48": "logo2.png",
    "128": "logo2.png"
  },
  "permissions": [
   "storage",
   "unlimitedStorage",
   "notifications",
   "tabs"
  ]
}